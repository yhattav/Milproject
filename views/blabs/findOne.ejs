<div class="container-fluid">
    <div class="blah-blah"></div>
    <ol class="breadcrumb">
        <li><a href="/blabs">Blabber</a></li>
        <li class="active">blab</li>
    </ol>
    <div class="row">
        <div class="col-md-6 col-md-offset-3 bg-white">
            <form id="updateThing" action="/blabs/update/<%=data.id%>">
                <div class="form-group">
                    <label for="nameInput">Blab</label>
                    <textarea name="text" type="text" class="form-control" id="nameInput" placeholder="name" ><%=data.text%></textarea>
                </div>
                <div class="form-group">
                    <label>e-mail</label>
                    <input name="email" type="text" class="form-control" value="<%=data.email%>" disabled>
                </div>
                <div class="form-group">
                    <label>Created At</label>
                    <input name="createdAt" type="text" class="form-control" value="<%=data.createdAt%>" disabled>
                </div>
                <button type="submit" class="btn btn-primary">Update</button>
                <button id="deleteThing" action="/blabs/destroy/<%=data.id%>" class="btn btn-danger">Delete</button>
            </form>
        </div>
    </div>
</div>